    <androidx.cardview.widget.CardView
        android:id="@+id/back"
        android:layout_width="1100dp"
        android:layout_height="650dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/home"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#F7FAFF"
                android:layout_marginTop="105dp">

                <ImageButton
                    android:id="@+id/Homebtn"
                    android:layout_width="50dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:background="#F7FAFF"
                    android:onClick="HomebtnOnClick"
                    android:scaleType="centerInside"
                    android:src="@drawable/backhome" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Home"
                android:textColor="@color/textcolor"
                android:textSize="13dp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/start"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#F7FAFF"
                android:layout_marginTop="80dp">
                <ImageButton
                    android:id="@+id/startbtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#F7FAFF"
                    android:onClick="startOnClick"
                    android:scaleType="centerInside"
                    android:src="@drawable/starticon"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Start"
                android:textColor="@color/textcolor"
                android:textSize="13dp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/stop"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#F7FAFF"
                android:layout_marginTop="80dp">

                <ImageButton
                    android:id="@+id/stopbtn"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:background="#F7FAFF"
                    android:onClick="btnStpOnClick"
                    android:scaleType="centerInside"
                    android:src="@drawable/pauseicon" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Stop"
                android:textColor="@color/textcolor"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="130dp"
            android:background="#F7FAFF"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Temi - XDK"
                android:textColor="#193B68"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dashboard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="#193B68"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="This Dashboard is \nto show the sensor data read from Azure IoT Hub.\n The sensor data is measured by Bocsh XDK device and sent to Azure IoT Hub.\n And this Temi App is readin the data from the IoT Hub and visualizes them in this Dashboard.\n\n It will give alert if Temperature is higher than 27, Humidity is higher than 50, and Light Intensity is higher than 500."
                android:textColor="#9AA9BF"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="380dp"
            android:layout_width="720dp"
            android:layout_height="match_parent"
            android:background="@drawable/right_round_rec"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="610dp"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Text data"
                    android:textColor="#193B68"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/txtview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#919EB3"
                    android:textSize="18dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="610dp"
                android:layout_height="410dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="25dp"
                    android:paddingLeft="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="XDK device sensor data"
                        android:paddingLeft="10dp"
                        android:textColor="#193B68"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp">
                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="match_parent"
                            android:text="TEMPERATURE"
                            android:textSize="13dp"
                            android:gravity="center"
                            android:textColor="#193B68"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:text="HUMIDITY"
                            android:textSize="13dp"
                            android:gravity="center"
                            android:textColor="#193B68"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:text="LIGHT INTENSITY"
                            android:textSize="13dp"
                            android:gravity="center"
                            android:textColor="#193B68"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <androidx.cardview.widget.CardView
                            android:background="@drawable/stroke"
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="10dp"
                            app:cardCornerRadius="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/stroke"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/tempShowtxt"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:text="0"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textSize="30dp" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            app:cardCornerRadius="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/stroke2"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/humShowtxt"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textSize="30dp" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            app:cardCornerRadius="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/stroke3"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/luxShowtxt"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textSize="30dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="10dp"
                            app:cardCornerRadius="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/stroke"
                                android:gravity="center">
                                <pl.pawelkleczkowski.customgauge.CustomGauge
                                    android:id="@+id/gauge1"
                                    android:layout_width="170dp"
                                    android:layout_height="170dp"
                                    android:layout_centerHorizontal="true"
                                    app:gaugeEndValue="40"
                                    app:gaugePointEndColor="@color/gaugeblue"
                                    app:gaugePointStartColor="@color/gaugeblue"
                                    app:gaugeStartAngle="179"
                                    app:gaugeStartValue="20"
                                    app:gaugeStrokeColor="@color/gaugegrey"
                                    app:gaugeStrokeWidth="30dp"
                                    app:gaugeSweepAngle="181"
                                    android:layout_marginTop="35dp"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="20dp"
                            app:cardCornerRadius="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/stroke2"
                                android:gravity="center">
                                <pl.pawelkleczkowski.customgauge.CustomGauge
                                    android:id="@+id/gauge2"
                                    android:layout_width="170dp"
                                    android:layout_height="170dp"
                                    android:layout_centerHorizontal="true"
                                    app:gaugeEndValue="60"
                                    app:gaugePointEndColor="#14A4FF"
                                    app:gaugePointStartColor="#14A4FF"
                                    app:gaugeStartAngle="179"
                                    app:gaugeStartValue="30"
                                    app:gaugeStrokeColor="@color/gaugegrey"
                                    app:gaugeStrokeWidth="30dp"
                                    app:gaugeSweepAngle="181"
                                    android:layout_marginTop="35dp"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="20dp"
                            app:cardCornerRadius="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/stroke3"
                                android:gravity="center">
                                <pl.pawelkleczkowski.customgauge.CustomGauge
                                    android:id="@+id/gauge3"
                                    android:layout_width="170dp"
                                    android:layout_height="170dp"
                                    android:layout_centerHorizontal="true"
                                    app:gaugeEndValue="400"
                                    app:gaugePointEndColor="#17C6EF"
                                    app:gaugePointStartColor="#17C6EF"
                                    app:gaugeStartAngle="179"
                                    app:gaugeStartValue="10"
                                    app:gaugeStrokeColor="@color/gaugegrey"
                                    app:gaugeStrokeWidth="30dp"
                                    app:gaugeSweepAngle="181"
                                    android:layout_marginTop="35dp"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>